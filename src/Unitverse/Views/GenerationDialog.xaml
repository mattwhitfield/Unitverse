        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static platformUI:EnvironmentColors.ToolWindowTextBrushKey}}" />
        </Style>

        <DataTemplate x:Key="TabItemTemplate" DataType="views:TabItem">
            <Border BorderThickness="3 0 0 0" Margin="6">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource {x:Static platformUI:CommonDocumentColors.InnerTabActiveIndicatorBrushKey}}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Margin="6" Text="{Binding Text}" Foreground="{DynamicResource {x:Static platformUI:EnvironmentColors.ToolWindowTextBrushKey}}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Normal" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                    <Setter Property="FontWeight" Value="Bold" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </DataTemplate>

        <views:TabItemTypeVisibilityConverter x:Key="TabVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" Width="160" Style="{DynamicResource {x:Static vsshell:VsResourceKeys.ThemedDialogListBoxStyleKey}}" Background="{DynamicResource {x:Static platformUI:EnvironmentColors.ToolWindowBackgroundBrushKey}}" BorderThickness="0" Grid.Row="0" ItemTemplate="{StaticResource TabItemTemplate}" ItemsSource="{Binding Tabs}" SelectedItem="{Binding SelectedTab}" />

            <Grid Grid.Column="1">
                <Grid Visibility="{Binding SelectedTab.ItemType, Converter={StaticResource TabVisibilityConverter}, ConverterParameter={x:Static views:TabItemType.TargetProject}}">
                    <TextBlock Margin="6">Target project</TextBlock>
                </Grid>
                <Grid Visibility="{Binding SelectedTab.ItemType, Converter={StaticResource TabVisibilityConverter}, ConverterParameter={x:Static views:TabItemType.GenerationOptions}}">
                    <TextBlock Margin="6">Generation options</TextBlock>
                </Grid>
                <Grid Visibility="{Binding SelectedTab.ItemType, Converter={StaticResource TabVisibilityConverter}, ConverterParameter={x:Static views:TabItemType.StrategyOptions}}">
                    <TextBlock Margin="6">Strategy options</TextBlock>
                </Grid>
                <Grid Visibility="{Binding SelectedTab.ItemType, Converter={StaticResource TabVisibilityConverter}, ConverterParameter={x:Static views:TabItemType.NamingOptions}}">
                    <TextBlock Margin="6">Naming options</TextBlock>
                </Grid>
            </Grid>
        </Grid>

        <Border Grid.Row="1" HorizontalAlignment="Stretch" BorderThickness="0 1 0 0" BorderBrush="{DynamicResource {x:Static platformUI:EnvironmentColors.ToolWindowTextBrushKey}}" Opacity="0.5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Path Grid.Column="0" Data="{StaticResource Logo}" Height="32" Width="160" Margin="6"
                                          Fill="{DynamicResource {x:Static platformUI:EnvironmentColors.ToolWindowTextBrushKey}}" Opacity="0.65" Stretch="Uniform" />

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
                    <Button Click="OnOK" Style="{DynamicResource {x:Static vsshell:VsResourceKeys.ButtonStyleKey}}" Margin="6, 0">
                        Ok
                    </Button>
                    <Button IsCancel="True" Click="OnCancel" Style="{DynamicResource {x:Static vsshell:VsResourceKeys.ButtonStyleKey}}">
                        Cancel
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
